<?xml version="1.0" encoding="utf-8"?>
<layer-list xmlns:android="http://schemas.android.com/apk/res/android">

    <!-- Outer stroke or border -->
    <item>
        <shape android:shape="rectangle">
            <solid android:color="#FFFFFF" /> <!-- White background color -->
            <corners android:radius="12dp" />  <!-- Rounded corners -->
            <stroke android:width="2dp" android:color="#CCCCCC" />  <!-- Light gray border -->
        </shape>
    </item>

    <!-- Shadow or inner background (optional) -->
    <item android:left="2dp" android:right="2dp" android:top="2dp" android:bottom="2dp">
        <shape android:shape="rectangle">
            <solid android:color="#F2F2F2" />  <!-- Light gray background inside the border -->
            <corners android:radius="10dp" />  <!-- Rounded corners matching the outer radius -->
        </shape>
    </item>
</layer-list>
